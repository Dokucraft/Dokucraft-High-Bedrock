{
	// Made by HARYA_
  "format_version": "1.21.0",
  "minecraft:attachable": {
    "description": {
      "identifier": "minecraft:arrow",
      "min_engine_version": "1.21.0",
      "materials": {
        "default": "entity_alphatest",
        "entity": "entity_alphatest",
        "enchanted": "entity_alphatest_glint"
      },
      "textures": {
        "default": "textures/items/arrow",
        "entity": "textures/entity/arrows",
        "enchanted": "textures/misc/enchanted_item_glint",
        "item": "textures/items/arrow"
      },
      "geometry": {
        "default": "geometry.arrow_item_size"
      },
      "animations": {
        "first_person_hold": "animation.arrow_player_item.first_person_hold",
        "third_person_hold": "animation.arrow_player_item.third_person_hold",
        "move": "animation.arrow_entity"
      },
      "scripts": {
        "pre_animation": [
          "variable.shake = query.shake_time - query.frame_alpha;",
          "variable.shake_power = variable.shake > 0.0 ? -Math.sin(variable.shake * 200.0) * variable.shake : 0.0;"
        ],
        "animate": [
          {"move": "!q.is_attached"},
          {"first_person_hold": "c.is_first_person"},
          {"third_person_hold": "!c.is_first_person"}
        ]
      },
      "render_controllers": [
        {"controller.render.arrow_entity": "!q.is_attached"},
        {"controller.render.item_size_arrow.animate": "q.is_attached"}
      ]
    }
  }
}